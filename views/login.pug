extends layout

block content
  section.background-1.d-flex.align-items-center.pt-5.pb-5.min-vh-100
    div.container
      div.text-center.pb-2
        h2.text-light=title
        h4.text-light -Login-
      div.row.d-flex.justify-content-center.align-items-center.h-100
        div.col-md-9.col-lg-6.col-xl-5
          img(src='https://img.freepik.com/foto-gratis/cerca-mano-guitarrista-tocando-guitarra-copyspace-macro-shot_155003-42125.jpg?w=740&t=st=1674847477~exp=1674848077~hmac=c604c12a33ab9dd4e46bbd151dbbb17964e5a541d54344a3f54163021a0ee3bb', alt="music guitar").img-fluid
        div.col-md-8.col-lg-6.col-xl-4.offset-xl-1
          form.pt-5.pb-5
            div.form-outline.mb-4
              label.form-label.text-light User account
              input.form-control.form-control-lg(type="email",placeholder="Ingrese la cuenta", id="user-account")
            div.form-outline.mb-3
              label.form-label.text-light Password
              input.form-control.form-control-lg(type="password",placeholder="Ingrese la contrase√±a", id="password")
            div.d-flex.justify-content-between.align-items-center
              div.form-check.mb-0
                input.form-check-input.me-2(type="checkbox")
                label.form-check-label.text-light Remember me
              a.text-light(href="#") Forgot password?
            div.text-center.text-lg-start.mt-4.pt-2
              button.btn.btn-primary.btn-lg.text-light Login
              p.small.fw-bold.mt-2.pt-1.mb-0.text-light Don't have an account?
                a.text-light(href="#") Register
            
              

