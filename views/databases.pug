extends dashboard

block main
  h1=title
  hr
  div.my-custom-scrollbar.table-wrapper-scroll-y
    table.table.table-striped.table-hover
      thead
        th Id
        th Nombre
        th Fecha Crea
        th Estado
        th Acciones
      tbody
        each item, index in databases
          tr
            td #{item.database_id}
            td #{item.name}
            td #{item.create_date}
            td #{item.state_desc}
            td
              div
                a(href='/showDatabase/'+item.name) Ingresar
                //button#ingresar.btn.btn-primary.mx-1 Ingresar
                button#accesos.btn.btn-primary.mx-1 Accesos
