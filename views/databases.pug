extends dashboard

block main
  h1=title
  hr
  table.table.table-striped.table-hover
    thead
      th Id
      th Nombre
      th Fecha Crea
      th Estado
      th Acciones
    tbody
      each item, index in databases
        tr
          td #{item.database_id}
          td #{item.name}
          td #{item.create_date}
          td #{item.state_desc}
          td
            div
              button.btn.btn-primary.mx-1 Ingresar
              button.btn.btn-primary.mx-1 Accesos
